        <url>https://github.com/salihkardan/release-test.git</url>
        <tag>HEAD</tag>
    </scm>


    <distributionManagement>
        <repository>
            <id>nexus-releases</id>
            <url>http://localhost:8081/nexus/content/repositories/releases</url>
        </repository>
    </distributionManagement>

    <build>

